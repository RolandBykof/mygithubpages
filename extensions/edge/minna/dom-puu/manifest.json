{
  "manifest_version": 3,
  "name": "DOM to Markdown Downloader",
  "version": "1.1",
  "description": "Lataa sivun sisältö Markdown-muodossa. Ctrl+Y = Heti, Ctrl+U = 10s viive + jäädytys.",
  "permissions": ["activeTab", "scripting"],
  "action": {},
  "commands": {
    "download-markdown": {
      "suggested_key": {
        "default": "Alt+Y",
        "mac": "Command+Y"
      },
      "description": "Lataa DOM Markdownina heti"
    },
    "delayed-freeze": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "Command+U"
      },
      "description": "Odota 10s, lataa DOM ja jäädytä"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}