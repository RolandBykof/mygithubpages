{
  "manifest_version": 3,
  "name": "A11y Command Center Pro",
  "version": "3.0",
  "description": "Alt+S: Korjauslista (vain puutteelliset). Alt+A: Kaikki elementit.",
  "permissions": ["activeTab", "scripting"],
  "action": {},
  "commands": {
    "scan_smart": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Avaa korjauslista (puutteelliset elementit)"
    },
    "scan_all": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Avaa kaikki elementit"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}