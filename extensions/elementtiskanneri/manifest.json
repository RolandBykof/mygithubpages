{
  "manifest_version": 3,
  "name": "A11y Fixer On-Demand",
  "version": "1.1",
  "description": "Korjaa saavutettavuuden Alt+S painalluksesta ja ilmoittaa tulokset.",
  "permissions": ["activeTab"],
  "action": {},
  "commands": {
    "fix-accessibility": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Suorita saavutettavuuskorjaukset"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}