{
  "manifest_version": 3,
  "name": "Facebook Accessibility Headers",
  "version": "1.2",
  "description": "Lisää h5-otsikot Facebookin julkaisuteksteihin parantaakseen ruudunlukijan navigointia",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
